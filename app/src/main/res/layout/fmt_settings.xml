<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="24dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="80dp">

    <TextView
        android:id="@+id/fmt_settings_hq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/proximanova_semibold"
        android:text="Качество звука HQ"
        android:textColor="@color/textColor"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/fmt_settings_hq_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fmt_settings_list"
        android:layout_alignTop="@+id/fmt_settings_hq" />

    <TextView
        android:id="@+id/fmt_settings_regions_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fmt_settings_hq"
        android:layout_alignStart="@+id/fmt_settings_hq"
        android:layout_below="@+id/fmt_settings_hq"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/proximanova_semibold"
        android:text="Регионы вещания"
        android:textColor="@color/textColor"
        android:textSize="16sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fmt_settings_list"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fmt_settings_regions_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />
</RelativeLayout>